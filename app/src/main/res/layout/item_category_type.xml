<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
                name="viewModel"
                type="com.schweitzering.walletmanager.settings.categories.CategoriesSettingsViewModel" />

        <variable
                name="viewHolder"
                type="com.schweitzering.walletmanager.settings.categories.CategoriesSettingsAdapter.CategoryViewHolder" />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewHolder.category.type}"
            android:textSize="14sp"/>

    </LinearLayout>
</layout>
